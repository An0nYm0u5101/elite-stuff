#!/usr/bin/env python
# -*- coding:utf-8 -*-
from os import sys, path
sys.path.append(path.dirname(path.dirname(path.abspath(__file__))))

import rpcutils
client = rpcutils.login()

if len(sys.argv) != 2:
    print 'Which console?'
    exit(1)
    
print "Killing console ID %s.. %s" % (sys.argv[1], client.call("console.destroy",
                                                               [sys.argv[1]])["result"])
