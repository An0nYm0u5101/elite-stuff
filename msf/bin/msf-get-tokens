#!/usr/bin/env python
# -*- coding:utf-8 -*-
from os import sys, path
sys.path.append(path.dirname(path.dirname(path.abspath(__file__))))

import rpcutils
client = rpcutils.login()
args = rpcutils.parse_args()
data = ""

def collect_data():
    def append(d, extra=True):
        global data
        if not extra or (extra and not args.list):
            data += d

    tokens = client.call('auth.token_list', [])["tokens"]
    total = 0
    append("msf> Active tokens:\n----------\n")
    for t in tokens:
        total += 1
        append("%s\n" % t, False)
    append("----------\nTotal: %d" % total)
    return data

if args.follow:
    rpcutils.ncurses(collect_data)
else:
    print collect_data()
